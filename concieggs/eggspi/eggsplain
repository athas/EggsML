#!/bin/sh

eggs=$1
all="$(listEggsers $eggs)"

numbeneggters="$(echo "$all" | while read -r who; do
        if [ "$(dbUserGet $who beneggter)" ]; then
            echo $who
        fi
    done| wc -l)"

numeggs=$(($(echo "$all"|wc -l) - $numbeneggters))

prefs () {
    echo "$all" | while read -r who; do
        pref=$(preference $who)
        if [ "$pref" ]; then
            case "$(random 0 1)" in
                0)
                    echo "$(randomName $who)" vil gerne have "$pref"
                    ;;
                *)
                    echo "$(randomName $who)" foretrækker "$pref"
                    ;;
            esac
        fi
        if isKing "$who"; then
            echo "Hans majestæt er med til bords!"
        fi
    done
}

prefs="$(prefs | enumerate)"

echo -n "Der er $(countEggsers $eggs) tilmeldt til $(titleEggs $eggs): $(describeEggs $eggs).  Der skal tilberedes $numeggs eggs.  $(king)"

if [ "$prefs" ]; then
    echo "Endvidere: $prefs."
else
    echo
fi
